<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cartão de Todos</title>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/toastr")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="teal" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="@Url.Action("Index", "Home")" class="brand-logo">Cartão de Todos</a>
            <ul class="right hide-on-med-and-down">
                <li class="@Html.IfActive("Usuarios")"><a href="@Url.Action("Index", "Usuarios")">Usuários</a></li>
                <li class="@Html.IfActive("Perfis")"><a href="@Url.Action("Index", "Perfis")">Perfis</a></li>
            </ul>

            <ul id="nav-mobile" class="side-nav">
                <li class="@Html.IfActive("Usuarios")"><a href="@Url.Action("Index", "Usuarios")">Usuários</a></li>
                <li class="@Html.IfActive("Perfis")"><a href="@Url.Action("Index", "Perfis")">Perfis</a></li>
            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
    </nav>

    <div class="section no-pad-bot">
        @RenderBody()      
    </div>               

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/materializecss")   
    @RenderSection("scripts", required: false)
    @Html.Partial("_Toastr")
</body>
</html>
